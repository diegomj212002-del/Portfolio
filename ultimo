  <script>
    document.getElementById('y').textContent=new Date().getFullYear();
    function handleSubmit(e){
      e.preventDefault();
      const data=new FormData(e.target);
      const name=data.get('name');
      const email=data.get('email');
      const msg=data.get('msg');
      const mailto=`mailto:diegomj212002@gmail.com?subject=New%20Inquiry%20from%20${encodeURIComponent(name)}&body=${encodeURIComponent(msg+"\n\nReply to: "+email)}`;
      window.location.href=mailto;
      document.getElementById('form-msg').textContent='Opening your email app…';
      return false;
    }
  </script>
